### CONTROL

## Mouse
# use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
# disable focus change when moving the mouse
focus_follows_mouse no

## Floating Windows
floating_maximum_size 1000 x 1000

## Keyboard
# (q) kill window
bindsym $mod+w kill
# (Q) system management
bindsym $mod+Shift+w mode "$mode_system"
# (p) launch a program
bindsym $mod+p exec rofi -show drun -show-icons -theme '/usr/share/rofi/themes/gruvbox-dark-hard.rasi'
# (u) mount a drive
bindsym $mod+u exec --no-startup-id ~/.cgx/.scripts/mount_drive.sh
# (U) unmount a drive
bindsym $mod+Shift+u exec --no-startup-id ~/.cgx/.scripts/unmount_drive.sh
# (g) mount a google drive
bindsym $mod+g exec --no-startup-id ~/.cgx/.scripts/mount_gdrive.sh
# (G) unmount a google drive
bindsym $mod+Shift+g exec --no-startup-id ~/.cgx/.scripts/unmount_gdrive.sh

# (t) terminal
bindsym $mod+t exec $term
# (T) floating terminal
bindsym $mod+Shift+t [instance="auxterm"] scratchpad show; [instance="auxterm"] move position center
# (m) floating text terminal
bindsym $mod+m exec --no-startup-id ~/.cgx/.scripts/texter.sh;
# (P) screenshot
bindsym $mod+Shift+p exec flameshot gui
# (n) floating whatsapp
bindsym $mod+n [class="Whatsapp-for-linux"] scratchpad show; [class="Whatsapp-for-linux"] move position center
# bindsym $mod+n [class="whatsapp-nativefier*"] scratchpad show; [class="whatsapp-nativefier*"] move position center
# (N) floating LINE
bindsym $mod+Shift+n [title="LINE"] scratchpad show; [title="LINE"] move position center
# (a) reference manager
bindsym $mod+a exec $term -e scholar open
# (x) file explorer
bindsym $mod+x [class="Thunar" window_type="normal"] scratchpad show; [class="Thunar" window_type="normal"] move position center
# (i) audio input sink
bindsym $mod+i exec --no-startup-id ~/.cgx/.scripts/audio-sink.sh
# (d) Windows 10 Virtual Machine
bindsym $mod+d exec virt-manager --connect qemu:///system --show-domain-console win10

# (R) restart settings
bindsym $mod+Shift+r mode "$mode_reload"
# (E) screen settings
bindsym $mod+Shift+e mode "$mode_screen"
# (b) bluetooth connections
bindsym $mod+b mode "$mode_bt"
# (e) vpn settings
bindsym $mod+e mode "$mode_vpn"

# navigation
# hjkl - vim-like motions
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
# arrow
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# HJKL - vim-like motions
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
# arrow
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# (s) split horizontal
bindsym $mod+s split toggle
# (v) split vertical
bindsym $mod+v layout toggle splith tabbed
# (S) grow horizontal
bindsym $mod+Shift+s resize grow width 10 px or 10 ppt
# (V) grow vertical
bindsym $mod+Shift+v resize grow height 10 px or 10 ppt

# (f) toggle fullscreen
bindsym $mod+f fullscreen toggle
# (F) toggle tiling or floating window
bindsym $mod+Shift+f floating toggle

# (Y) translate selected text
bindsym $mod+Shift+y exec --no-startup-id ~/.cgx/.scripts/translate.sh
# (y) ready currently selected text
bindsym $mod+y exec --no-startup-id ~/.cgx/.scripts/speech.sh
# (alt+n) read the news aloud
bindsym $mod+$alt+n exec --no-startup-id ~/.cgx/.scripts/speak_news.sh

## Modes
set $mode_system System (l) lock, (e) logout, (s) suspend, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    #bindsym l exec --no-startup-id betterlockscreen -l "dimblur" --display 1, mode "default"
    bindsym l exec --no-startup-id xscreensaver-command -lock, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id systemctl suspend, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
set $mode_reload (r) all, (p) polybar, (t) auxterm, (w) animated wallpaper
mode "$mode_reload" {
    bindsym w exec --no-startup-id ~/.cgx/.scripts/load_gif.sh ~/.cgx/img/wall_vertical.gif ~/.cgx/img/wall_horizontal.mp4; mode "default"
    bindsym p exec --no-startup-id ~/.cgx/.scripts/polybar_launch.sh; mode "default"
    bindsym r restart; mode "default"
    bindsym t exec $term -n 'auxterm' -f 'undefined medium:style=medium:pixelsize=10:antialias=true'; mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
set $mode_screen (w) workstation, (s) standalone, (p) presentation, (h) home
mode "$mode_screen" {
    bindsym w exec --no-startup-id ~/.screenlayout/workstation.sh; mode "default"; exec "sleep 1 && i3-msg restart"
    bindsym s exec --no-startup-id ~/.screenlayout/standalone.sh; mode "default"; exec "sleep 1 && i3-msg restart"
    bindsym p exec --no-startup-id ~/.screenlayout/presentation.sh; mode "default"; exec "sleep 1 && i3-msg restart"
    bindsym h exec --no-startup-id ~/.screenlayout/home.sh; mode "default"; exec "sleep 1 && i3-msg restart && i3-msg workspace 7:extra3 && i3-msg move workspace to output right"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
# bluetooth connections
set $mode_bt Connect to: (h) headphones, (m) mouse, (e) earphones, (o) on, (w) off
mode "$mode_bt" {
    bindsym h exec --no-startup-id bluetoothctl connect 38:18:4C:3D:E4:F4; exec --no-startup-id notify-send -i audio-headphones "Bluetooth" "Headphones connected"; mode "default"
    bindsym m exec --no-startup-id bluetoothctl connect E9:BD:5C:D4:DB:FC; mode "default"
    bindsym e exec --no-startup-id bluetoothctl connect 28:83:35:49:DE:9D; mode "default"
    bindsym w exec --no-startup-id bluetoothctl power off; exec --no-startup-id notify-send -i blueman-disabled "Bluetooth" "OFF"; mode "default"
    bindsym o exec --no-startup-id bluetoothctl power on; exec --no-startup-id notify-send -i blueman-enabled "Bluetooth" "ON"; mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
# vpn connections
set $mode_vpn Connect to: (j) Japan, (u) USA, (n) Netherlands, (d) default, (s) select, (w) disconnect
mode "$mode_vpn" {
    bindsym j exec --no-startup-id ~/.cgx/.scripts/vpn.sh connect Japan; mode "default"
    bindsym u exec --no-startup-id ~/.cgx/.scripts/vpn.sh connect United_States; mode "default"
    bindsym n exec --no-startup-id ~/.cgx/.scripts/vpn.sh connect Netherlands; mode "default"
    bindsym d exec --no-startup-id ~/.cgx/.scripts/vpn.sh connect; mode "default"
    bindsym s exec --no-startup-id ~/.cgx/.scripts/vpn.sh select; mode "default"
    bindsym w exec --no-startup-id ~/.cgx/.scripts/vpn.sh disconnect; mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# avoid misclicking titlebars on tabbed mode
set $mode_change_tab Double-click to select tab
mode "$mode_change_tab" {
    bindsym button1 focus, mode "default"
    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym button1 mode "$mode_change_tab", exec --no-startup-id "sleep 0.3 && i3-msg mode 'default'"
for_window [class=".*"] title_format "<span font='undefined 8'> %title</span>"

## WORKSPACE
# variables
set $wsAll    "1:main"
set $wsEdit   "2:edit"
set $wsWeb    "3:web"
set $wsMedia  "4:media"
set $wsSecond "5:extra"
set $wsThird  "6:extra2"
set $wsFourth "7:extra3"

workspace $wsAll output DP-3
workspace $wsEdit output DP-3
workspace $wsWeb output DP-3
workspace $wsMedia output DP-3
workspace $wsSecond output HDMI1
workspace $wsThird output DP-3
workspace $wsFourth output HDMI-0

# switch to workspace
bindsym $mod+1	workspace $wsAll
bindsym $mod+2	workspace $wsEdit
bindsym $mod+3	workspace $wsWeb
bindsym $mod+4	workspace $wsMedia
bindsym $mod+0	workspace $wsSecond
bindsym $mod+9	workspace $wsThird
bindsym $mod+8	workspace $wsFourth

# move to workspace
bindsym $mod+Shift+1	move container to workspace $wsAll; workspace $wsAll
bindsym $mod+Shift+2	move container to workspace $wsEdit; workspace $wsEdit
bindsym $mod+Shift+3	move container to workspace $wsWeb; workspace $wsWeb
bindsym $mod+Shift+4	move container to workspace $wsMedia; workspace $wsMedia
bindsym $mod+Shift+0	move container to workspace $wsSecond; workspace $wsSecond
bindsym $mod+Shift+9	move container to workspace $wsThird; workspace $wsThird
bindsym $mod+Shift+8	move container to workspace $wsFourth; workspace $wsFourth

