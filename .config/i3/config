### VARIABLES

set $term --no-startup-id xst 
set $mod Mod1

### INITIALIZATION
exec_always --no-startup-id compton --config ~/.config/compton.conf -b
exec_always --no-startup-id feh --bg-fill ~/.cgx/img/wallpaper.png
exec_always --no-startup-id betterlockscreen -u ~/.cgx/img/wallpaper.png
exec_always --no-startup-id ~/.cgx/.scripts/load_gif.sh
exec_always --no-startup-id ~/.cgx/.scripts/polybar_launch.sh
exec --no-startup-id xss-lock -- betterlockscreen -l "dimblur"

### SCRATCHPAD
## Terminal
exec $term -n auxterm
for_window [instance="auxterm"] floating enable
for_window [instance="auxterm"] resize set 80 ppt 80 ppt
for_window [instance="auxterm"] move scratchpad
for_window [instance="auxterm"] border pixel 5
# binding set to Shift+t

### CONTROL

## Mouse
# use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
# disable focus change when moving the mouse
focus_follows_mouse no

## Keyboard
# (q) kill window
bindsym $mod+q kill
# (Q) system management
bindsym $mod+Shift+q mode "$mode_system"
# (p) launch a program
bindsym $mod+p exec rofi -show

# (t) terminal
bindsym $mod+t exec $term 
# (T) floating terminal
bindsym $mod+Shift+t [instance="auxterm"] scratchpad show; [instance="auxterm"] move position center
# (e) editor
bindsym $mod+e exec $term -e nvim
# (a) reference manager
bindsym $mod+a exec $term -e scholar open
# (x) file explorer
bindsym $mod+x exec $term -e ranger
# (i) internet
bindsym $mod+i exec qutebrowser

# (R) restart settings
bindsym $mod+Shift+r mode "$mode_reload"

# navigation
# hjkl - vim-like motions
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
# arrow
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# HJKL - vim-like motions
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
# arrow
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# (s) split horizontal
bindsym $mod+s split toggle
# (v) split vertical
bindsym $mod+v layout toggle splith tabbed
# (S) grow horizontal
bindsym $mod+Shift+s resize grow width 10 px or 10 ppt 
# (V) grow vertical
bindsym $mod+Shift+v resize grow height 10 px or 10 ppt

# (f) toggle fullscreen
bindsym $mod+f fullscreen toggle
# (F) toggle tiling or floating window
bindsym $mod+Shift+f floating toggle

# (y) open youtube
bindsym $mod+y exec --no-startup-id exec google-chrome-stable "https://www.youtube.com"

## Modes
set $mode_system System (l) lock, (e) logout, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id betterlockscreen -l "dimblur", mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
set $mode_reload (r) all, (p) polybar, (t) auxterm, (w) animated wallpaper
mode "$mode_reload" {
    bindsym w exec --no-startup-id ~/.cgx/.scripts/load_gif.sh; mode "default"
    bindsym p exec --no-startup-id ~/.cgx/.scripts/polybar_launch.sh; mode "default"
    bindsym r restart; mode "default"
    bindsym t exec $term -n auxterm; mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

## WORKSPACE
# variables
set $wsAll    "1:main"
set $wsEdit   "2:edit"
set $wsWeb    "3:web"
set $wsMedia  "4:media"
set $wsSecond "5:extra"

workspace $wsSecond output HDMI1

# switch to workspace
bindsym $mod+1	workspace $wsAll
bindsym $mod+2	workspace $wsEdit
bindsym $mod+3	workspace $wsWeb
bindsym $mod+4	workspace $wsMedia
bindsym $mod+0	workspace $wsSecond

# move to workspace
bindsym $mod+Shift+1	move container to workspace $wsAll; workspace $wsAll
bindsym $mod+Shift+2	move container to workspace $wsEdit; workspace $wsEdit
bindsym $mod+Shift+3	move container to workspace $wsWeb; workspace $wsWeb
bindsym $mod+Shift+4	move container to workspace $wsMedia; workspace $wsMedia
bindsym $mod+Shift+0	move container to workspace $wsSecond; workspace $wsSecond

### APPLICATIONS
## Floats
for_window[class="^Pavucontrol$"] floating enable
for_window[class="^Arandr$"] floating enable
for_window[class="^Nm-connection-editor$"] floating enable
for_window[class="^Uim-pref-gtk$"] floating enable

## Workspace
for_window[class="Google-chrome"] move to workspace $wsWeb
for_window[class="Spotify"] move to workspace $wsMedia


## VOLUME
# volume control
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -q -D pulse sset Master 5%+ && pkill -RTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -q -D pulse sset Master 5%- && pkill -RTMIN+10 i3blocks
bindsym XF86AudioMute exec --no-startup-id amixer -q -D pulse sset Master toggle && pkill -RTMIN+10 i3blocks

## MONITOR
# brightness control
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 25
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 25
bindsym XF86Display exec --no-startup-id arandr

### LAYOUT
## Window Layout
smart_gaps on
smart_borders no_gaps

gaps inner 10
gaps outer 0

## Window
# title
font pango:DejaVu Sans Mono 8
# border
for_window [class="^.*"] border pixel 2

## Colors
exec_always --no-startup-id exec xrdb -load ~/.Xresources

# Set Xresources colors:
set_from_resource $black			color0  #000000
set_from_resource $darkblack		color8  #000000
set_from_resource $red				color1  #000000
set_from_resource $darkred			color9  #000000
set_from_resource $green			color2  #000000
set_from_resource $darkgreen		color10 #000000
set_from_resource $yellow			color3  #000000
set_from_resource $darkyellow		color11 #000000
set_from_resource $blue				color4  #000000
set_from_resource $darkblue			color12 #000000
set_from_resource $magenta			color5  #000000
set_from_resource $darkmagenta		color13 #000000
set_from_resource $cyan				color6  #000000
set_from_resource $darkcyan			color14 #000000
set_from_resource $white			color7  #000000
set_from_resource $darkwhite		color15 #000000
set_from_resource $background		background #000000
set_from_resource $foreground		foreground #000000
set $transparent				#00000000

#                       BORDER			BACKGROUND	TEXT		INDICATOR			CHILD_BORDER
client.focused			$red			$red		$magenta	$black				$darkblue
client.unfocused		$transparent	$blue		$white		$black				$transparent
client.focused_inactive	$transparent	$blue		$white		$black				$darkblack
client.urgent			$darkred		$darkred	$black		$darkred			$darkred
client.background						$black

