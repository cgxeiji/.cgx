!! URxvt Config
! set font
URxvt*font: xft:DejaVu\ Sans\ Mono\ for\ Powerline:style=Book:size=9,xft:Material Icons:style=Regular:size=12:minspace=False,xft:Inconsolata\ for\ Powerline:size=11, xft:FontAwesome:style=Regular:size=12
URxvt*letterSpace: 1
! remove scrollbar
URxvt.scrollBar: false
! set cursor color to green
URxvt.cursorColor: green
! resize font using keyboard
URxvt.perl-ext-common: resize-font
URxvt.resize-font.step: 5
! (Up) font size
URxvt.resize-font.bigger: C-Up
! (Down) font size
URxvt.resize-font.smaller: C-Down
! (Right) reset font size
URxvt.resize-font.reset: C-Right
